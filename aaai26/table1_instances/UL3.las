%%%%%%% BACKGROUND KNOWLEDGE %%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

num(1..3).
1{lt(X,Y); gt(X,Y); eq(X,Y)}1 :- num(X), num(Y).
lt(X,Y) :- lt(X,Z), lt(Z,Y), num(X), num(Y), num(Z).
gt(X,Y) :- gt(X,Z), gt(Z,Y), num(X), num(Y), num(Z).
eq(X,Y) :- eq(X,Z), eq(Z,Y), num(X), num(Y), num(Z).

